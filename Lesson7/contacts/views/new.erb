<h3>Create new contact</h3>
<form action='/contacts/new' method='post'>
  <dl>
    <dt><label for='first_name'>First name</label></dt>
    <dd><input type="text" name="first_name" id="first_name" placeholder="John" value="<%= @first_name %>" required></dd>

    <dt><label for='last_name'>Last name</label></dt>
    <dd><input type="text" name="last_name" id="last_name" placeholder="Doe" value="<%= @last_name %>" required></dd>

    <dt><label for='phone'>Phone number</label></dt>
    <dd><input type="tel" name="phone" id="phone" placeholder="(XXX)XXX-XXXX" value="<%= @phone %>">
      Type: 
      <select name="phone_type">
          <option value="Home">Home</option>
          <option value="Work">Work</option>
          <option value="Cell">Cell</option>
      </select>
    </dd>
    
    <dt><label for='email'>Email</label></dt>
    <dd><input type="email" name="email" id="email" placeholder="sample@gmail.com" value="<%= @email %>"></dd>
    
    <dt><label for='group'>Contact Group</label></dt>
    <dd><select name="contact_group">
          <option value="Family">Family</option>
          <option value="Friends">Friend</option>
          <option value="Work">Work</option>
          <option value="Other">Other</option>
        </select>
    </dd>
  </dl>
  <input type="submit" value="Create Contact">
</form>
<br>
<form action="/" method="get">
  <input type="submit" value="Back to Contact List">
</form>